@using YelpScrapeWeb.Models.YelpGraphQLBusinesses
@model SearchResults
@{
    ViewData["Title"] = "Search";
}

<form method="post">
    <div class="border p-3 mt-4">
        @{
            if (@Model == null)
            {
                <div class="row pb-2">
                    <h2 class="text-primary">YelpGraphQL Api Scrape</h2>
                    <hr />
                    <h5>Instructions</h5>
                    <p>Search businesses by filling in fields.</p>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SearchArguments.Location">Enter Location Here</label>
                    <input asp-for="@Model.SearchArguments.Location" class="form-control" />
                    <span asp-validation-for="@Model.SearchArguments.Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SearchArguments.Term">Enter SearchTerm Here</label>
                    <input asp-for="@Model.SearchArguments.Term" class="form-control" />
                    <span asp-validation-for="@Model.SearchArguments.Term" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SearchArguments.Price">Enter Price Here (1 = $, 2 = $$, 3 = $$$, 4 = $$$$)</label>
                    <input asp-for="@Model.SearchArguments.Price" class="form-control" />
                    <span asp-validation-for="@Model.SearchArguments.Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning" style="width:175px">Search</button>
            }
        }

        @{
            if (@Model != null)
            {
                <div>
                    <h2 class="text-primary">YelpGraphQL Api Scrape</h2>
                    <hr />
                    <h5>Businesses</h5>

                    @foreach (var businessObj in @Model.Businesses)
                    {
                        <div class="d-grid" style="padding:1rem">
                            <p>Name: @Html.Raw(businessObj.Name)</p>
                            <p>Rating: @Html.Raw(businessObj.Rating)</p>
                            <p>Reviews Count: @Html.Raw(businessObj.Review_Count)</p>
                            <p>Price: @Html.Raw(businessObj.Price)</p>
                            <p>Phone: @Html.Raw(businessObj.Display_Phone)</p>
                        </div>
                    }
                </div>
                <a asp-controller="Businesses" asp-action="Search" class="btn btn-secondary" style="width:175px">
                    Back to Search
                </a>
            }
        }
    </div>
</form>