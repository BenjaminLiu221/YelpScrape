@using YelpScrapeWeb.Models.YelpGraphQLBusinesses
@model SearchBusinessesResults
@{
    ViewData["Title"] = "Search";
}

<form method="post"> 
    <div class="border p-3 mt-4">

        @{
            if (@Model == null)
            {
                <div class="row pb-2">
                    <h2 class="text-primary">YelpGraphQL Api Scrape</h2>
                    <hr />
                    <h5>Instructions</h5>
                    <p>Search businesses by filling in fields.</p>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SearchBusinessesArguments.Location">Enter Location Here</label>
                    <input asp-for="@Model.SearchBusinessesArguments.Location" class="form-control" />
                    <span asp-validation-for="@Model.SearchBusinessesArguments.Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SearchBusinessesArguments.Term">Enter SearchTerm Here</label>
                    <input asp-for="@Model.SearchBusinessesArguments.Term" class="form-control" />
                    <span asp-validation-for="@Model.SearchBusinessesArguments.Term" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SearchBusinessesArguments.Price">Select Price Here (1 = $, 2 = $$, 3 = $$$, 4 = $$$$)</label>
                    <input asp-for="@Model.SearchBusinessesArguments.Price" class="form-control" />
                    <span asp-validation-for="@Model.SearchBusinessesArguments.Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning" style="width:175px">Search</button>
            }
        }

        @{
            if (@Model != null)
            {
                <div>
                    <h2 class="text-primary">YelpGraphQL Api Scrape</h2>
                    <hr />
                    <h3>Businesses</h3>

                    <input type="hidden" asp-for="@Model.SearchBusinessesArguments.Location" class="form-control" />
                    <input type="hidden" asp-for="@Model.SearchBusinessesArguments.Term" class="form-control" />
                    <input type="hidden" asp-for="@Model.SearchBusinessesArguments.Price" class="form-control" />
                    @{
                        var offset = 0;
                        <input asp-for="@Model.SearchBusinessesArguments.OffSet" value=0 class="form-control" />
                    }

                    @foreach (var businessObj in @Model.Businesses)
                    {
                        <div class="card text-black bg-info mb-3" style="width:50%;padding:0.5rem;">
                          <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
                            <p style="padding-left:0.5rem">Id: @Html.Raw(businessObj.Id)</p>
                            <p style="padding-left:0.5rem">Name: @Html.Raw(businessObj.Name)</p>
                            <p style="padding-left:0.5rem">Rating: @Html.Raw(businessObj.Rating)</p>
                            <p style="padding-left:0.5rem">Reviews Count: @Html.Raw(businessObj.Review_Count)</p>
                            <p style="padding-left:0.5rem">Price: @Html.Raw(businessObj.Price)</p>
                            <p style="padding-left:0.5rem">Phone: @Html.Raw(businessObj.Display_Phone)</p>
                          </a>
                        </div>                        
                    }

                </div>
                <a asp-controller="Businesses" asp-action="Search" class="btn btn-secondary" style="width:175px">
                    Back to Search
                </a>
                <button type="submit" class="btn btn-warning" style="width:175px">Next Page</button>
            }
        }
    </div>
</form>